<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.AuthActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/auth_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/adShimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/auth_nav" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/adShimmer"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainBannerAdView"
        app:layout_constraintEnd_toEndOf="@+id/mainBannerAdView"
        app:layout_constraintStart_toStartOf="parent"
        app:shimmer_auto_start="true"
        app:shimmer_duration="1000">

        <!-- A simple placeholder view with rounded corners for the ad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <!-- Placeholder for Ad Image -->
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:background="#C4C6C8"
                android:clipToOutline="true"
                android:scaleType="centerCrop" />

            <!-- Placeholder for Ad Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginBottom="8dp"
                    android:background="#C4C6C8" />

                <View
                    android:layout_width="80dp"
                    android:layout_height="14dp"
                    android:background="#C4C6C8" />
            </LinearLayout>

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/mainBannerAdView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:adSize="SMART_BANNER"
        android:visibility="invisible"
        app:adUnitId="@string/admob_banner_id_release"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>