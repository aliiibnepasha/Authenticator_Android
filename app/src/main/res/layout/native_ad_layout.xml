<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_ad"
    android:elevation="4dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_gray_ad"
        android:padding="8dp">

        <!-- Media Content (Main Ad Image or Video) -->
        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:scaleType="fitXY" />

        <!-- Row for Icon, Title, Rating, Ad Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:paddingTop="8dp">

            <!-- Ad Icon -->
            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/color_gray_ad"
                android:src="@drawable/img_baby_brain"
                android:scaleType="fitCenter"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical">

                <!-- Ad Headline -->
                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <!-- Ad Label + Star Rating -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/ad_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ad"
                        android:layout_marginStart="1dp"
                        android:textSize="12sp"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/ad_label_bg"
                        android:textColor="@android:color/white"/>

                    <RatingBar
                        android:id="@+id/ad_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:visibility="visible"
                        android:layout_marginStart="-50dp"
                        android:layout_gravity="start"
                        android:isIndicator="true"
                        android:scaleX="0.5"
                        android:scaleY="0.5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Ad Body -->
        <TextView
            android:id="@+id/ad_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginVertical="5dp"
            />

        <!-- CTA Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"
            android:text="INSTALL"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:textColor="@android:color/white" />
    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
